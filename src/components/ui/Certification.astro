---
const { img, title, date, issuer, url} = Astro.props;
---

<a href={url} class="button-container">
  <div class="icon-container">
    <img src={img} alt="icon" class="button-icon" />
  </div>
  <div class="text-container">
    <p class="text">{title}</p>
    <p class="issuer">{issuer}</p>
    <p class="date">{date}</p>
  </div>
</a>

<style>

  .button-container {
    display: grid;
    grid-template-columns: 2fr 3fr;
    align-items: center;
  
    height: 6rem;
    width: 20rem;

    padding: 1rem;
  
    border-radius: 10px;
  
    background-color: #e8eef2;
    color: black;
    text-decoration: none;
  }
  
  .icon-container {
    display: flex;
    justify-content: center;
    align-items: center;
  
    height: 100%;
    width: 100%;
    
    border-radius: 10px 0px 0px 10px;
    background-color: #dbdbdb;
  }
  
  .button-icon {
    height: 4rem;
    width: 4rem;
  }
  
  .text-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  
    height: 100%;
    width: 100%;
  }
  
  .text {
    margin: 0;
    padding: 0;
    text-align: center;
    font-size: 1.2rem;
    font-weight: 500;
    color: black;
    text-decoration: none;
  }

  .issuer {
    margin: 0;
    padding: 0;
    text-align: center;
    font-size: 1rem;
    font-weight: 400;
    color: black;
    text-decoration: none;
  }

  .date {
    margin: 0;
    padding: 0;
    text-align: center;
    font-size: 1rem;
    font-weight: 400;
    color: black;
    text-decoration: none;
  }
  
  </style>
<script>
	document.addEventListener("DOMContentLoaded", function () {
		const rocket = document.querySelector(".rocket") as HTMLElement;
		const step2024 = document.getElementById("step-2024");
		const step2023 = document.getElementById("step-2023");
		const internship = document.getElementById("step-?");
		const firepit = document.querySelector(".firepit") as HTMLElement;
		const Fumes = document.getElementById("smoke1") as HTMLElement;
		const Fumes2 = document.getElementById("smoke2") as HTMLElement;
		const steamWrap = document.getElementById("steam-wrap") as HTMLElement;
		const cards2023 = document.getElementById("cards-2023") as HTMLElement;
		const cards2024 = document.getElementById("cards-2024") as HTMLElement;

		// Event listeners
		step2024.addEventListener("click", function () {
			rocket.classList.add("launch-animation");
			step2024.classList.add("active");
			step2023.classList.remove("active");
			internship.classList.remove("active");
			firepit.style.display = "block";
			steamWrap.style.display = "block";
			cards2023.style.display = "none";
			cards2024.style.display = "flex";

		});

		step2023.addEventListener("click", function () {
			rocket.classList.remove("launch-animation");
			step2023.classList.add("active");
			step2024.classList.remove("active");
			internship.classList.remove("active");
			firepit.style.display = "none";
			Fumes.style.display = "block";
			Fumes2.style.display = "block";
			cards2023.style.display = "flex";
			cards2024.style.display = "none";
		});

		internship.addEventListener("click", function () {
			rocket.classList.add("crash-animation");
			step2023.classList.remove("active");
			step2024.classList.remove("active");
			internship.classList.add("active");
			Fumes.style.display = "none";
			Fumes2.style.display = "none";
		});

		rocket.addEventListener("animationend", function () {
			if (rocket.classList.contains("launch-animation")) {
				Fumes.style.display = "none";
				Fumes2.style.display = "none";
			}

			if (rocket.classList.contains("crash-animation")) {
				firepit.style.display = "none";
			}
		});


		//stars
	});
</script>

<style>

  section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100vh;
    width: 100%;
    background-color: #0284C7;
    margin-top: 5rem;
    border-radius: 20px;

    h1 {
      color: #fff;
      font-size: 2rem;
      margin-bottom: 2rem;
    }


    .bento-grid {
      display: grid;
      grid-template-columns: 1fr 2fr 1fr;
      grid-gap: 20px;
      width: 100%;
      height: 100%;
      margin: 0 auto;

      padding: 20px;
      text-align: center;
      background-color: #fff;
      border-radius: 5px;

      div {
        padding: 20px;
        border-radius: 10px;
      }

      span {
        font-size: 2rem;
      }

      .grid-left {
        display: grid;
        grid-template-rows: 2fr 3fr 1fr;
        grid-gap: 20px;
        grid-column: 1;

        div {
          background-color: #c6eafb;
          color: #fff;
        }

      }

      .grid-mid {
        display: grid;
        grid-template-rows: 2fr 5fr;
        grid-gap: 20px;
        grid-column: 2;

        div {
          background-color: #c6eafb;
          color: #fff;
        }

        #header {
          background-color: #0285c7f1;

          h1 {
            color: #fff;
            font-size: 4rem;
            margin-bottom: 2rem;
          }
        }
      }

      .grid-right {
        display: grid;
        grid-template-rows: 4fr 4fr 1fr;
        grid-gap: 20px;
        grid-column: 3;

        div {
          background-color: #c6eafb;
          color: #fff;
        }
      }
    }
  }

  @media (max-width: 768px) {
    section {
      .bento-grid {
        grid-template-columns: 1fr;
        
        span {
          font-size: 1.5rem;
        }

        .grid-left,
        .grid-mid,
        .grid-right {
          grid-template-rows: auto;
          grid-gap: 20px;
          grid-column: 1;
        }

        .grid-left div,
        .grid-mid div,
        .grid-right div {
          padding: 10px;
          height: 25rem;
        }

        #header h1 {
          font-size: 3rem;
        }
      }
    }
  }

</style>
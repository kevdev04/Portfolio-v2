---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import About from "../components/About.astro";
import Projects from '../components/Projects.astro';
import Journey from '../components/Journey.astro';
---

<Layout title="Kevin's Portfolio">
	<main class="flex">
		<Hero />
		<About />
		<Journey />
		<Projects /> 
	</main>
</Layout>

<style>
	.flex {
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
	}
</style>

<script>
	document.addEventListener("DOMContentLoaded", function () {
		const anchorLink = document.getElementById("toabout");
		const anotherOne = document.getElementById("toabout2");
		const anchorProjects = document.getElementById("toprojects");
		const anchorJourney = document.getElementById("tojourney");
		const anchorJourney2 = document.getElementById("tojourney2");
		const journey2Projects = document.getElementById("step-?");

		function scrollToTargetOnClick(event, targetId) {
			event.preventDefault();
			const targetElement = document.getElementById(targetId);

			if (targetElement) {
				window.scroll({
					behavior: "smooth",
					left: 0,
					top: targetElement.offsetTop,
				});
			}
		}


		// anchor link event listeners
		if (anchorLink) {
			anchorLink.addEventListener("click", function (event) {
				scrollToTargetOnClick(event, "about");
			});
		} else {
			console.error("Element with ID 'toabout' not found.");
		}

		if (anotherOne) {
			anotherOne.addEventListener("click", function (event) {
				scrollToTargetOnClick(event, "about");
			});
		} else {
			console.error("Element with ID 'toabout2' not found.");
		}

		if (anchorProjects) {
			anchorProjects.addEventListener("click", function (event) {
				scrollToTargetOnClick(event, "projects");
			});
		} else {
			console.error("Element with ID 'toprojects' not found.");
		}

		if (anchorJourney) {
			anchorJourney.addEventListener("click", function (event) {
				scrollToTargetOnClick(event, "journey");
			});
		} else {
			console.error("Element with ID 'tojourney' not found.");
		}

		if (anchorJourney2) {
			anchorJourney2.addEventListener("click", function (event) {
				scrollToTargetOnClick(event, "journey");
			});
		} else {
			console.error("Element with ID 'tojourney2' not found.");
		}

		if (journey2Projects) {
    journey2Projects.addEventListener("click", function (event) {
        // Prevent the default behavior of the click event
        if (event) {
            event.preventDefault();
        }

        // Wait for 6 seconds and then scroll to "projects"
        setTimeout(function() {
            scrollToTargetOnClick(event, "projects");
        }, 4650);
    });
} else {
    console.error("Element with ID 'step-?' not found.");
}

	});
</script>
